# Home
GET     /                       controllers.HomeController.index()

# Core Concepts
GET     /users                  users.UserController.showForm()
POST    /users                  users.UserController.saveUser()
GET     /products               products.ProductController.showForm()
POST    /products               products.ProductController.addProduct()
GET     /cart                   cart.CartController.showCart()
POST    /cart                   cart.CartController.addItem()
GET     /coupons                coupons.CouponController.showForm()
POST    /coupons                coupons.CouponController.validateCoupon()
GET     /notifications          notifications.NotificationController.showForm()
POST    /notifications          notifications.NotificationController.sendNotification()
GET     /analytics              analytics.AnalyticsController.dashboard()

# Advanced Concepts
GET     /orders                 orders.OrderController.showForm()
POST    /orders                 orders.OrderController.placeOrder()
GET     /reviews                reviews.ReviewController.showForm()
POST    /reviews                reviews.ReviewController.addReview()
GET     /workflow                workflow.WorkflowController.showBoard()
POST    /workflow                workflow.WorkflowController.createOrder()
POST    /workflow/transition    workflow.WorkflowController.transition()
GET     /ledger                 ledger.LedgerController.showLedger()
POST    /ledger                 ledger.LedgerController.addEntry()

# Integrated Flows
GET     /flows                           flows.FlowController.showFlows()
POST    /flows/checkout/select-user      flows.FlowController.selectUser()
POST    /flows/checkout/add-to-cart      flows.FlowController.addToCart()
POST    /flows/checkout/advance/:step    flows.FlowController.advanceToStep(step: Int)
POST    /flows/checkout/apply-coupon     flows.FlowController.applyCoupon()
POST    /flows/checkout/skip-coupon      flows.FlowController.skipCoupon()
POST    /flows/checkout/place-order      flows.FlowController.placeOrder()
POST    /flows/checkout/confirm          flows.FlowController.confirmCheckout()
POST    /flows/checkout/reset            flows.FlowController.resetCheckout()
POST    /flows/recovery/enter-email      flows.FlowController.enterEmail()
POST    /flows/recovery/generate-token   flows.FlowController.generateToken()
POST    /flows/recovery/send-email       flows.FlowController.sendResetEmail()
POST    /flows/recovery/confirm-reset    flows.FlowController.confirmReset()
POST    /flows/recovery/reset            flows.FlowController.resetRecovery()
